<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC4A14"
    tools:context="com.project.mif.calculateproj.luaspersegipanjang">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Persegi Panjang :"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textrumus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtAlas"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtAlas"
        android:text="p x l"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/txtTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:layout_below="@+id/txtAlas"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:text="panjang"
        android:textStyle="bold"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/txtAlas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="number|numberDecimal" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTinggi"
        android:layout_alignBottom="@+id/txtTinggi"
        android:layout_alignParentLeft="true"
        android:text="Lebar"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnHitung"
        android:layout_marginTop="16dp"
        android:text="Hasilnya adalah = ?"
        android:textStyle="bold"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTinggi"
        android:layout_below="@+id/txtTinggi"
        android:textColor="#000000"
        android:text="Hitung"         />


    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textrumus"
        android:layout_alignStart="@+id/textrumus"
        android:layout_centerVertical="true"
        android:onClick="bback"
        android:text="Back"
        android:textColor="#000000" />

</RelativeLayout>
